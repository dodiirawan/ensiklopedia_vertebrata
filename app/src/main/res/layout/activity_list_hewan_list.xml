<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:id="@+id/list_hewan_list"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
>

    <android.support.v7.widget.CardView
            android:layout_marginBottom="1px"
            android:layout_width="match_parent"
            android:elevation="0dp"
            app:cardCornerRadius="0dp"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_recyler_view"
                android:layout_marginTop="1dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:civ_border_width="1sp"
                app:civ_border_color="#EEEEEE"
                android:src="@drawable/ic_home_black_24dp"/>
            <TextView
                    android:paddingLeft="5dp"
                    android:text="Nama Hewan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewNmHewanList" android:textSize="20sp" android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/image_recyler_view"/>
            <TextView
                    android:paddingLeft="5dp"
                    android:text="Spesies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewSpesiesHewanList" android:textSize="14sp"
                    android:layout_centerVertical="true" android:layout_toEndOf="@+id/image_recyler_view"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>