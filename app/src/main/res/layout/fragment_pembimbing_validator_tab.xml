<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="irawan.org.appensiklopediaoffline.fragment.PemValTab"
>

    <!--<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Coba"/>-->
    <!---->
    <android.support.v7.widget.CardView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:background="#81C784"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_view_val_pem"
                    android:layout_margin="5dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:civ_border_width="1sp"
                    app:civ_border_color="#EEEEEE"
                    android:src="@drawable/ic_home_black_24dp"/>

            <TextView
                    android:text="Nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewInfoNama" android:layout_weight="0.19" android:textSize="20sp"
                    android:textAlignment="center"/>
            <TextView
                    android:layout_below="@+id/textViewInfoNama"
                    android:text="NIM NIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewInfoNipNim" android:layout_weight="0.16" android:textSize="18sp"
                    android:textAlignment="center"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <!--fakultas-->
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Fakultas : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInfoFakultasX"
            android:layout_weight="0.16" android:textSize="@dimen/ukuranTeksLabelInfo"
            android:textAlignment="center"/>
        <TextView
            android:text="FakultasX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInfoFakultas"
            android:layout_weight="0.16" android:textSize="@dimen/ukuranTeksDetailInfo"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Program Studi : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInfoProdiX"
            android:layout_weight="0.16" android:textSize="@dimen/ukuranTeksLabelInfo"
            android:textAlignment="center"/>
        <TextView
            android:text="ProdiX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInfoProdi"
            android:layout_weight="0.16" android:textSize="@dimen/ukuranTeksDetailInfo"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Program Keahlian : "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInfoKeahlianX"
            android:layout_weight="0.16" android:textSize="@dimen/ukuranTeksLabelInfo"
            android:textAlignment="center"/>
        <TextView
            android:text="Program KeahlianX"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewInfoKeahlian"
            android:layout_weight="0.16" android:textSize="@dimen/ukuranTeksDetailInfo"
            android:textAlignment="center"/>
    </LinearLayout>
</LinearLayout>
